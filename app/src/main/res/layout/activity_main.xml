<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/player"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="120dp"
        android:layout_marginTop="50dp"
        android:text="Player: "
        android:textSize="45sp" />

    <TextView
        android:id="@+id/Winner"
        android:layout_width="219dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="120dp"
        android:layout_marginTop="5dp"
        android:text="Winner: "
        android:textSize="40sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:id="@+id/row1">
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="80sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:onClick="onklick"
            android:id="@+id/btn1"></Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="80sp"
            android:onClick="onklick"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/btn2"></Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="80sp"
            android:onClick="onklick"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/btn3"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:id="@+id/row2">
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text=" "
            android:onClick="onklick"
            android:textSize="80sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/btn4"></Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="80sp"
            android:onClick="onklick"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/btn5"></Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="80sp"
            android:onClick="onklick"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/btn6"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/row3"
        android:gravity="center_horizontal">
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="80sp"
            android:onClick="onklick"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/btn7"></Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="80sp"
            android:onClick="onklick"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/btn8"></Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text=" "
            android:onClick="onklick"
            android:textSize="80sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/btn9"></Button>
    </LinearLayout>

    <Button
        android:id="@+id/newGame"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="75dp"
        android:layout_marginTop="15dp"
        android:text="New Game"
        android:textSize="35sp"
        android:onClick="createNewGame">

    </Button>
</LinearLayout>